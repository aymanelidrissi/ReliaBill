{
  "name": "relia-bill",
  "private": true,
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0"
  },
  "scripts": {
    "dev:web": "cross-env PORT=3000 pnpm --dir apps/web dev",
    "dev:api": "cross-env PORT=3333 pnpm --dir apps/api start:dev",
    "dev": "concurrently -n WEB,API -c blue,green \"pnpm run dev:web\" \"pnpm run dev:api\"",
    "build:web": "pnpm --dir apps/web build",
    "build:api": "pnpm --dir apps/api build",
    "build": "pnpm -r build"
  }
}
