generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  invoices  Invoice[]
  createdAt DateTime @default(now())
}

model Invoice {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  amount    Decimal
  status    String   @default("draft")
  issuedAt  DateTime
  paidAt    DateTime?
}
