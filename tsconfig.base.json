{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "types": ["node"],
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["web/src/*"],
      "@core/*": ["packages/invoice-core/src/*"],
      "@reliabill/invoice-core": ["packages/invoice-core/src/index.ts"],
      "@reliabill/invoice-core/*": ["packages/invoice-core/src/*"],
      "@reliabill/ui": ["packages/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
